<div class="container">
  <h1><%= @cocktail.name %></h1>

<% @cocktail.ingredients.each do |ingredient| %>
<%= ingredient.name %>:
<% ingredient.doses.each do |dose| %>
<%= dose.description %>L

  <%= link_to dose_path(dose),
    method: :delete,
    data: {confirm: "Are you sure?"}, class: "icon" do %>
  <i class="fas fa-trash-alt"></i>
  <% end %>
<br>


<br>
<% end %>
<% end %>

<%= link_to "add dose", new_cocktail_dose_path(params[:id]) %>
<br>
<%= link_to "back", cocktails_path %>
</div>

