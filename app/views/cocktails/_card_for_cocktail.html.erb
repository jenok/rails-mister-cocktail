
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo %>');">



    <div class="card-category">Popular</div>
    <div class="card-description">
      <h2><%= @cocktail.name %></h2>
      <p>Very cool, the best</p>



        <% @cocktail.ingredients.each do |ingredient| %>
        <%= ingredient.name %>:
        <% ingredient.doses.each do |dose| %>
        <%= dose.description %>

        <%= link_to dose_path(dose),
        method: :delete,
        data: {confirm: "Are you sure?"}, class: "icon" do %>
        <i class="fas fa-trash-alt"></i>
        <br>
        <% end %>
        <% end %>
        <% end %>


    </div>

  </div>
